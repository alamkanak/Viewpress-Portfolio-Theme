primary-color-500 = #42b983
primary-color-600 = #0e8c53
text-color = #485058
gray-color-600 = #e1e2e2
gray-color-500 = #f3f5f7
gray-color-400 = #cecece

@import url('https://fonts.googleapis.com/css?family=Open%20Sans');

html, body, .badge-light
    font-family 'Open Sans'
    color text-color

a
    color: primary-color-500

a:hover
    color: primary-color-600

.btn-theme 
    color: #fff;
    background-color: primary-color-500;
    border-color: primary-color-500;

.btn-theme:hover
    color: #fff;
    background-color: primary-color-600;
    border-color: primary-color-600;

.bg-light
    background-color gray-color-500 !important

.badge-light
    background-color: gray-color-500

.breadcrumb
    background-color: gray-color-500

.separator
    width: 100%
    height 1px
    background-color: gray-color-600

.clamp-1
    display: -webkit-box;
    line-clamp: 1;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    -moz-box-orient: vertical;
    -ms-box-orient: vertical;
    box-orient: vertical;
    overflow: hidden;

.clamp-2
    display: -webkit-box;
    line-clamp: 2;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    -moz-box-orient: vertical;
    -ms-box-orient: vertical;
    box-orient: vertical;
    overflow: hidden;

.social
    padding: 0
    li
        list-style: none
        display: inline-block
        a
            color: text-color
        a:hover
            color: primary-color-600

.tip
    background-color: gray-color-500
    border-color: primary-color-500
    padding: .1rem 1.5rem
    border-left-width: .5rem
    border-left-style: solid
    margin: 2rem 0 2rem

    .title
        font-weight: bold

    ul
        padding-left 17px


.home-layout
    .avatar 
        width 200px
        height 200px
        border-radius 50%

    .projects 
        margin-right 1.5rem
        display flex
        flex-wrap wrap
        justify-content center

    .projects-leave-to, .projects-enter
        transform scale(0.7) translateY(-80px)
        opacity 0

    .projects-leave-active 
        position absolute
    
    .project 
        transition all .35s ease-in-out
        margin-left 1.5rem
        box-shadow 0px 2px 8px lightgrey
        border-radius 5px
        width calc(100% - 1.5rem)
        display flex
        flex-direction column
        align-items center
        background-color #fff
        margin-bottom 1.5rem
        color text-color
        text-decoration none

        @media screen and (min-width: 768px)
            width calc(100% / 2 - 1.5rem)

        @media screen and (min-width: 992px)
            width calc(100% / 3 - 1.5rem)

        img 
            border-radius 5px 5px 0 0
            width 100%
            transition all .35s ease-in-out

        .desc
            @media screen and (min-width: 768px)
                height 48px
        
    .project:hover, .project:focus 
        color text-color
        text-decoration none
        background-color gray-color-400
        img 
            opacity 0.7
    

.portfolio-item-layout
    .skill-title
        font-weight: 700
        font-size: 14px
        text-transform: uppercase

    .skills ul 
        padding: 0
        li 
            list-style: none
    .content img 
        width: 100%