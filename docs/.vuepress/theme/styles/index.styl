.clamp-1
    display: -webkit-box;
    line-clamp: 1;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    -moz-box-orient: vertical;
    -ms-box-orient: vertical;
    box-orient: vertical;
    overflow: hidden;

.clamp-2
    display: -webkit-box;
    line-clamp: 2;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    -moz-box-orient: vertical;
    -ms-box-orient: vertical;
    box-orient: vertical;
    overflow: hidden;

.home-layout
    .avatar 
        width 200px
        height 200px
        border-radius 50%

    .projects {
        margin-bottom:50px;
        margin-top:25px;
        margin-right: 1rem;
        display:flex;
        flex-wrap:wrap;
        justify-content:center;
    }

    .projects-enter {
        transform: scale(0.5) translatey(-80px);
        opacity:0;
    }

    .projects-leave-to{
        transform: translatey(30px);
        opacity:0;
    }

    .projects-leave-active {
        position: absolute;
        z-index:-1;
    }
    
    .project {
        transition: all .35s ease-in-out;
        margin-left:1rem;
        box-shadow:0px 2px 8px lightgrey;
        border-radius:3px;
        width:calc(100% / 3 - 1rem);
        display:flex;
        flex-direction:column;
        align-items:center;
        background-color: #fff;
        margin-bottom: 1rem;

        img {
            width: 100%;
        }
    }

